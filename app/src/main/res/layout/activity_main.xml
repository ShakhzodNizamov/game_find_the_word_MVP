<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context=".view.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@drawable/panel"
            android:gravity="center">

            <ImageButton
                android:id="@+id/buttonBack"
                style="@style/Button.Action"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_new" />

                <TextView
                    android:id="@+id/textLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:text="1" />

            </FrameLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="8dp"
                android:src="@drawable/ic_money" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textScore"
                style="@style/Text.Center"
                android:text="120" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/backgr"

            android:gravity="center|top"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="32dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/bg_bottom"
                android:padding="16dp"
                android:src="@drawable/apple" />

            <TextView
                android:id="@+id/incorrect_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="INCORRECT ANSWER!!"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="28sp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/layoutAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    style="@style/Button.Answer"
                    tools:text="A" />

                <Button
                    style="@style/Button.Answer"
                    tools:text="P" />

                <Button
                    style="@style/Button.Answer"
                    tools:text="P" />

                <Button
                    style="@style/Button.Answer"
                    tools:text="L" />

                <Button
                    style="@style/Button.Answer"
                    tools:text="E" />

                <Button
                    style="@style/Button.Answer"
                    tools:text="E" />

                <Button
                    style="@style/Button.Answer"
                    tools:text="E" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="32dp" />

            <LinearLayout
                android:id="@+id/VariantsTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    style="@style/Button.Variant"
                    tools:text="A" />

                <Button
                    style="@style/Button.Variant"

                    tools:text="P" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="P" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="L" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/VariantsBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    style="@style/Button.Variant"
                    tools:text="A" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="P" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="P" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="L" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />

                <Button
                    style="@style/Button.Variant"
                    tools:text="E" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/show_letter"
                    style="@style/Button.Variant"
                    android:layout_margin="10dp"
                    android:src="@drawable/clear" />

                <ImageView
                    android:id="@+id/delete_letter"
                    style="@style/Button.Variant"
                    android:layout_margin="10dp"
                    android:src="@drawable/debt" />

                <ImageView
                    android:id="@+id/restart"
                    style="@style/Button.Variant"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    android:background="#44BC1F"
                    android:src="@drawable/ic_refresh" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:clickable="false"
        android:id="@+id/layout_correct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BE363434"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#E4161616">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_black_24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="CORRECT!"
                    android:textAlignment="center"
                    android:textColor="#9AFD29"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_black_24dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+10"
                android:textColor="#FF9800"
                android:textSize="55sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="#F5BA3B"
            android:text="Continue"
            android:textColor="#F00" />
    </FrameLayout>

    <FrameLayout

        android:id="@+id/layout_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="#BE363434"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youwin" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_toMain"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="#F5BA3B"
            android:text="MAIN"
            android:textColor="#F00" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_correct_letter"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BE363434"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Show a correct letter(40 coins)"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_cancel_of_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#A51313"
                    android:text="CANCEL" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_ok_of_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#199E15"
                    android:text="OK" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_delete_letter"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BE363434"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Delete letter which are not part of the solution (40 coins)"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_cancel_of_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#A51313"
                    android:text="CANCEL" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_ok_of_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#199E15"
                    android:text="OK" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_restart"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BE363434"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Are you sure you want restart game?"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btn_cancel_of_restart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#A51313"
                    android:text="CANCEL" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_ok_of_restart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#199E15"
                    android:text="OK" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>